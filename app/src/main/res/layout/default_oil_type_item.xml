<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_oil_name"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/px_30"
        android:layout_below="@id/view_line"
        android:background="@drawable/rec_gray_stoke_eee_4"
        android:gravity="center"
        android:text="0#"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@drawable/oil_name_text_selector"
        android:textSize="12sp"
       />

    <View
        android:layout_width="@dimen/px_10"
        android:layout_height="@dimen/px_1"
        android:layout_toRightOf="@id/tv_oil_name"
        android:visibility="gone" />

    <View
        android:id="@+id/view_line"
        android:layout_width="@dimen/px_10"
        android:layout_height="@dimen/px_10" />
</RelativeLayout>
