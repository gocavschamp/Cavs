<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.myapp.homepage.homedemo.RxjavaDemoActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_rx_creat"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/pickerview_timebtn_pre"
            android:gravity="center"
            android:text="rxjava creat"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_rx_just"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/pickerview_timebtn_pre"
            android:gravity="center"
            android:text="rxjava just"
            android:textSize="15sp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/pickerview_timebtn_pre"
            android:gravity="center"
            android:text="rxjava creat"
            android:textSize="20sp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/pickerview_timebtn_pre"
            android:gravity="center"
            android:text="rxjava creat"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="结果："
        android:textColor="@color/main_color"
        android:textSize="18sp" />
</LinearLayout>
