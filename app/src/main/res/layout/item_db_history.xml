<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/content"
    android:layout_marginBottom="@dimen/dp_15"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_30"
        android:ellipsize="marquee"
        android:paddingLeft="@dimen/dp_10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="历史记录加载链接登记卡发了较大"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btnCollect"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/btnCollect"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_30"
        android:layout_margin="@dimen/dp_0"
        android:background="@drawable/rec_white_stoke_eee_4"
        android:layout_marginRight="@dimen/dp_15"
        android:text="收藏"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:gravity="center"
        app:layout_constraintRight_toLeftOf="@id/ivDelete"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="@dimen/dp_30"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="@dimen/dp_30"
        android:padding="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:src="@mipmap/close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>