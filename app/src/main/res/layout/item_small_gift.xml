<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="75dp"
    android:clipChildren="false">

    <LinearLayout
        android:id="@+id/ll_Content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Johnny"
            android:textColor="@color/main_color"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_Message"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignBottom="@+id/ll_Content"
            android:layout_alignLeft="@+id/ll_Content"
            android:layout_alignStart="@+id/ll_Content"
            android:background="@mipmap/icon_small_gift_bg"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="对你一见钟情，双手捧出玫瑰"
            android:textColor="@android:color/white"
            android:textSize="26px" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivgift"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ll_Content"
        android:scaleType="fitCenter"
        android:src="@mipmap/icon_super_like" />

    <TextView
        android:id="@+id/giftNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ll_Content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/ivgift"
        android:gravity="bottom"
        android:textColor="#6633FF"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="x55" />
</RelativeLayout>